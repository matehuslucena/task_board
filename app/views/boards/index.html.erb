<p id="notice"><%= notice %></p>

<h1>Listing Boards</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
        <td class="acoes"><%= link_to 'Show', board, :class => "btn btn-primary" %></td>
        <td class="acoes"><%= link_to 'Edit', edit_board_path(board), :class => "btn btn-primary" %></td>
        <td class="acoes"><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in?%>
  <%= link_to 'New Board', new_board_path, :class => "btn btn-success"  %>
  <%= link_to 'Back', tasks_path, :class => "btn btn-warning"   %><br><br>
<% else%>
  <%= link_to 'Back', new_task_path, :class => "btn btn-warning"   %><br><br>
<% end %>
